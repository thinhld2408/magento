<?xml version="1.0"?>
<config>
    <sections>
        <productlabel translate="label" module="sm_slider">
            <label>Product Label Manager</label>
            <tab>sm_slider</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <labelProduct translate="label">
                    <label>Product Config Fields</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <!-- New fields go here -->
                        <enabled translate="label comment">
                            <label>Enabled</label>
                            <comment>
                                <![CDATA[If select "NO" default menu will show in frontend or "Yes" for your menu!</span>]]>
                            </comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <sale translate="label comment">
                            <label>Sale Product Logo</label>
                            <comment>
                                <![CDATA[Select your menu will show up in frontend]]>
                            </comment>
                            <frontend_type>select</frontend_type>
                            <source_model>productlabel/source_label_sale</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </sale>
                        <new translate="label comment">
                            <label>New Product logo</label>
                            <comment>
                                <![CDATA[Level Category Tree will drop down in Menu]]>
                            </comment>
                            <frontend_type>select</frontend_type>
                            <source_model>productlabel/source_label_new</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </new>
                        <featured translate="label comment">
                            <label>Featured Product logo</label>
                            <comment>
                                <![CDATA[Level Category Tree will drop down in Menu]]>
                            </comment>
                            <frontend_type>select</frontend_type>
                            <source_model>productlabel/source_label_featured</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </featured>
                    </fields>
                </labelProduct>
            </groups>
        </productlabel>
    </sections>
</config>

