<?xml version="1.0"?>

<config>
    <modules>
        <SM_Slider>
            <version>1.0.1</version>
        </SM_Slider>
    </modules>
    <global>
        <models>
            <sm_slider>
                <class>SM_Slider_Model</class>
                <resourceModel>sm_slider_resource</resourceModel>
            </sm_slider>
            <sm_slider_resource>
                <class>SM_Slider_Model_Resource</class>
                <entities>
                    <slider>
                        <table>sm_slider_slider</table>
                    </slider>
                    <item>
                        <table>sm_slider_item</table>
                    </item>

                </entities>
            </sm_slider_resource>
        </models>
        <helpers>
            <sm_slider>
                <class>SM_Slider_Helper</class>
            </sm_slider>
        </helpers>
        <blocks>
            <sm_slider>
                <class>SM_Slider_Block</class>
            </sm_slider>
        </blocks>
        <resources>
            <sm_slider_setup>
                <setup>
                    <module>SM_Slider</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
            </sm_slider_setup>
        </resources>
    </global>
    <admin>
        <routers>
            <sm_slider_admin>
                <use>admin</use>
                <args>
                    <module>SM_Slider</module>
                    <frontName>slidermanager</frontName>
                </args>
            </sm_slider_admin>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <sm_slider>
                    <file>sm/slider.xml</file>
                </sm_slider>
            </updates>
        </layout>
    </adminhtml>
    <frontend>
        <layout>
            <updates>
                <sm_slider>
                    <file>sm/slider.xml</file>
                </sm_slider>
            </updates>
        </layout>
    </frontend>
</config>