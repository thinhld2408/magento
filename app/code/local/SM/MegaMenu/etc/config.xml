<?xml version="1.0"?>

<config>
    <modules>
        <SM_MegaMenu>
            <version>0.1.0</version>
        </SM_MegaMenu>
    </modules>
    <global>
        <models>
            <sm_megamenu>
                <class>SM_MegaMenu_Model</class>
                <resourceModel>sm_megamenu_resource</resourceModel>
            </sm_megamenu>
            <sm_megamenu_resource>
                <class>SM_MegaMenu_Model_Resource</class>
                <entities>
                    <menu>
                        <table>sm_megamenu_menu</table>
                    </menu>
                    <menu_item>
                        <table>sm_megamenu_menu_item</table>
                    </menu_item>
                    <menu_store>
                        <table>sm_megamenu_menu_store</table>
                    </menu_store>
                </entities>
            </sm_megamenu_resource>
        </models>
        <helpers>
            <sm_megamenu>
                <class>SM_MegaMenu_Helper</class>
            </sm_megamenu>
        </helpers>
        <blocks>
            <sm_megamenu>
                <class>SM_MegaMenu_Block</class>
            </sm_megamenu>
        </blocks>
        <resources>
            <sm_megamenu_setup>
                <setup>
                    <module>SM_MegaMenu</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
            </sm_megamenu_setup>
        </resources>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <SM_MegaMenu after="Mage_Adminhtml">SM_MegaMenu</SM_MegaMenu>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <sm_megamenu>
                    <file>sm/megamenu.xml</file>
                </sm_megamenu>
            </updates>
        </layout>
    </adminhtml>
    <frontend>
        <layout>
            <updates>
                <sm_megamenu>
                    <file>sm/megamenu.xml</file>
                </sm_megamenu>
            </updates>
        </layout>
    </frontend>
</config>