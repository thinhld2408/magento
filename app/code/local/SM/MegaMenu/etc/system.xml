<?xml version="1.0"?>
<config>

    <sections>
        <megamenu translate="label" module="sm_slider">
            <label>MegaMenu Config</label>
            <tab>sm_slider</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <config translate="label">
                    <label>MegaMenu Config Fields</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <!-- New fields go here -->
                        <enabled translate="label comment">
                            <label>Enabled</label>
                            <comment>
                                <![CDATA[If select "NO" default menu will show in frontend or "Yes" for your menu!</span>]]>
                            </comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <select translate="label comment">
                            <label>Level Category DropDown</label>
                            <comment>
                                <![CDATA[Select your menu will show up in frontend]]>
                            </comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </select>
                        <level translate="label comment">
                            <label>Level Category DropDown</label>
                            <comment>
                                <![CDATA[Level Category Tree will drop down in Menu]]>
                            </comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </level>
                    </fields>
                </config>
            </groups>
        </megamenu>
    </sections>
</config>

