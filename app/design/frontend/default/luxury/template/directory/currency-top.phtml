/**
 * Currency switcher
 *
 * @see Mage_Directory_Block_Currency
 */
?>

<!-- Currency BOF -->
<?php if($this->getCurrencyCount()>1): ?>
<?php $items = array(); ?>
<div class="currency-switch header-switch">
    <?php foreach ($this->getCurrencies() as $_code => $_name): ?>
		<?php
		$_selected = ($_code == $this->getCurrentCurrencyCode()) ? ' class="selected"' : '';
		$items[] = '<a href="'. $this->getSwitchCurrencyUrl($_code) .'" '. $_selected .'>'. Mage::app()->getLocale()->currency($_code)->getSymbol()  .'</a>';
		?>
    <?php endforeach; ?>
	<ul class="links"><li><?php echo implode('</li><li class="separator">|</li><li>', $items); ?></li></ul>
</div>
<?php endif; ?>
<!-- Currency EOF -->
