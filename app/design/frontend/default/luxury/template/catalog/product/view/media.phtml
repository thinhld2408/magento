<?php
    $_product = $this->getProduct();
    $_helper = $this->helper('catalog/output');

	$_imgX = 376;
	$_imgY = 502;

	$_thumbX = 88;
	$_thumbY = 117;
?>
<div class="main-view">
<a href="<?php echo $this->helper('catalog/image')->init($_product, 'image') ?>" class="product-image" id="main-img">
    <?php echo $this->helper('luxurysettings')->getLabel($_product);  ?>
    <img src="<?php echo $this->helper('catalog/image')->init($_product, 'image')->resize($_imgX, $_imgY); ?>" alt="<?php echo $this->htmlEscape($this->getImageLabel()) ?>" width="<?php echo $_imgX ?>" height="<?php echo $_imgY; ?>" /></a>
</div>
<?php if (count($this->getGalleryImages()) > 0): ?>
<div class="more-views">
    <ul>
    <?php $i = 0; foreach ($this->getGalleryImages() as $_image): $i++; ?>
        <li <?php echo ($i % 4 > 0 ? '' : 'class="last"' ) ?> >           
            <a rel="<?php echo $this->helper('catalog/image')->init($_product, 'image', $_image->getFile())->resize($_imgX, $_imgY); ?>" href="<?php echo $this->helper('catalog/image')->init($_product, 'image', $_image->getFile()); ?>" class="product-image" title="<?php echo $this->htmlEscape($_image->getImageLabel()) ?>" ><img src="<?php echo $this->helper('catalog/image')->init($_product, 'image', $_image->getFile())->resize($_thumbX, $_thumbY); ?>" alt="<?php echo $this->htmlEscape($_image->getImageLabel()) ?>" width="<?php echo $_thumbX ?>" height="<?php echo $_thumbY; ?>" /></a>
        </li>
    <?php endforeach; ?>
    </ul>
</div>
<?php endif; ?>