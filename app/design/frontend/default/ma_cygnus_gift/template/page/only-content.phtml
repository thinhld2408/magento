    function compress($buffer){
        $buffer = preg_replace('!/\*[^*]*\*+([^/][^*]*\*+)*/!', '', $buffer);
        $buffer = str_replace(array("\r\n", "\r", "\n", "\t", '  ', '    ', '    '), '', $buffer);
        return $buffer;
    }

    $from   = array('radioproduct-custom-option',  'checkboxvalidate-one-required-by-name');  // fix compress bug
    $to     = array('radio product-custom-option', 'checkbox validate-one-required-by-name');
    echo str_replace($from, $to, compress($this->getChildHtml('content')));
